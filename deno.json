{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-env --unstable server.ts",
    "start": "deno run --allow-net --allow-read --allow-env --unstable server.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "lib": ["deno.window", "deno.unstable"]
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always"
    }
  }
} 